extends layout

block content
    |
    .row.col-lg-8.col-md-6.col-sm-10.mx-auto
        form.form-signin(action='/signin', method='POST').col-lg-12.col-md-12.col-sm-10.mx-auto.mb-3
            h1.align-center.mb-3 Signin
            |
            label.sr-only(for='email') Email address
            input(type='email', id='email' name='email' class='form-control' placeholder='Email address', required autofocus)
            |
            label.sr-only(for='password') Password
            input(type='password' id='password' name='password' class='form-control' placeholder='Password' required autofocus)
            .checkbox
                label 
                    input(type="checkbox", value="remember-me")
                    |
                    | Remember me
            button.btn.btn-dark.btn-block(type='submit') Signin
            a.btn.btn-primary.btn-block(href='/auth/facebook')
                i.fa.fa-facebook.fa-lg
                | &nbsp;
                | Signin with Facebook
            a#kakao-login-btn(href='/auth/kakao')
                i.ka.ka-kakao.ka-lg
                | Signin with Kakao
            |
            div.sub 
                a(href='/users/new') Signup
                | 
                | /
                |
                a(href='/reset-password') Reset Password