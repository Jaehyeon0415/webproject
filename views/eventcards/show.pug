extends ../layout

block content
  .container
    h1.main-title= question.title

    .eventcard.show
      include _question

      .buttons
        button.btn.btn-primary #[i.fa.fa-thumbs-up] Like
        if currentUser && eventcard.author.id == currentUser.id
          | 
          a.btn.btn-outline-secondary(href=`/eventcards/${eventcard.id}/edit`) Edit
          | 
          a.btn.btn-outline-danger.need-confirm-btn(href=`/eventcards/${eventcard.id}?_method=delete`) Delete
      
    if eventcard.numAnswers > 0
      hr
      h3 #{eventcard.numAnswers} Answer(s)
      .answers.show
        each answer in answers
          include _answer

    form(action=`/eventcards/${eventcard.id}/answers`, method='POST')
      .form-group
        label(for='answer') Your Answer
        textarea.form-control(name="content", rows="5")
      button.btn.btn-primary(type="submit") Post Your Answer

